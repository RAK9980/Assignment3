<%- include ../Partials/head.ejs %>
<%- include ../Partials/main_nav.ejs %>

<!--Content for Edit Page-->
<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="post">
                
                <div class="form-group">
                <label for="nameTextField">Customer Name</label>
                <input type="text" Class="form-control"
                id = "nameTextField"
                placeholder = "Enter Customer Name"
                name="name" 
                value="<%= order.name %>"
                required>
                </div>
                
                <div class="form-group">
                <label for="numberTextField">Order Number</label>
                <input type="text" Class="form-control"
                id = "orderTextField"
                placeholder = "Enter Order Number"
                name="orderNumber" 
                value="<%= order.orderNumber %>"
                required>
                </div>
                
                <div class="form-group">
                <label for="phoneTextField">Phone #</label>
                <input type="number" Class="form-control"
                id = "phoneTextField"
                placeholder = "Enter Customer Phone#"
                name="phone" 
                value="<%= order.phone %>"
                required>
                </div>
                
                <div class="form-group">
                <label for="dataTextField">Order Date</label>
                <input type="text" Class="form-control"
                id = "dateTextField"
                placeholder = "Enter date of Order"
                name="orderDate" 
                value="<%= order.orderDate %>"
                required>
                </div>

                <div class="form-group">
                <label for="statusTextField">Order Status</label>
                <input type="text" Class="form-control"
                id = "statusTextField"
                placeholder = "Enter status of Order"
                name="status" 
                value="<%= order.status %>"
                required>
                </div>

                <div class="form-group">
                <label for="infoTextField">Order Info</label>
                <input type="text" Class="form-control"
                id = "infoTextField"
                placeholder = "Enter detail of Order"
                name="orderInfo" 
                value="<%= order.orderInfo %>"
                required>
                </div>

                <div class="form-group">
                <label for="collectionTextField">Order Collection</label>
                <input type="text" Class="form-control"
                id = "collectionTextField"
                placeholder = "Pick up/Delivery?"
                name="orderCollection" 
                value="<%= order.orderCollection %>"
                required>
                </div>
                <br>
                <button class="button.btn.btn-primary" type="submit">
                <i class="fas fa-edit"></i> Submit
                </button>

                <a href="/order-data" class="btn btn-warning">
                <i class="fas fa-undo"></i> Cancel</a>
            </form>
        </div>
    </div>
</div>

